<link href="/stylesheets/views/abilityDetail.css" rel="stylesheet" type="text/css" />
<div class="kt-container kt-grid__item kt-grid__item--fluid">
  <div class="kt-subheader kt-grid__item">
    <div class="kt-container">
      <div class="kt-subheader__main">
        <h3 class="kt-subheader__title"></h3>
      </div>
    </div>
  </div>

  <div class="kt-container  kt-grid__item kt-grid__item--fluid">

    <!--Begin::App-->
    <div class="kt-grid kt-grid--desktop kt-grid--ver kt-grid--ver-desktop kt-app">

      <!--Begin:: App Aside Mobile Toggle-->


      <!--End:: App Aside Mobile Toggle-->

      <!--Begin:: App Aside-->
      <div class="kt-grid__item kt-app__toggle kt-app__aside" id="kt_user_profile_aside" style="opacity: 1;">

        <!--begin:: Widgets/Applications/User/Profile1-->
        <div class="kt-portlet kt-portlet--height-fluid-">
          <div class="kt-portlet__head  kt-portlet__head--noborder">
            <div class="kt-portlet__head-label">
              <h3 class="kt-portlet__head-title">
              </h3>
            </div>
          </div>
          <div class="kt-portlet__body kt-portlet__body--fit-y">

            <!--begin::Widget -->
            <div class="kt-widget kt-widget--user-profile-1">
              <div class="kt-widget__head">
                <div class="kt-widget__media">
                  <img src="/media/users/teacher_default.png" class="student-photo" alt="image">
                </div>
                <div class="kt-widget__content">
                  <div class="kt-widget__section">
                    <span class="kt-widget__username">
                      <span class="student-name"></span>
                      <i class="fa student-sex"></i>
                    </span>
                    <span class="kt-widget__subtitle">正在学习 <span class="learning-technology-count"></span> 项技术</span>
                    <span class="kt-widget__subtitle">已被 <span class="company-focus-count">0</span> 家企业关注</span>
                  </div>
                </div>
              </div>
              <div class="kt-widget__body">
                <div class="kt-widget__content">
                  <div class="kt-widget__info">
                    <span class="kt-widget__label">就读高校:</span>
                    <span class="kt-widget__data student-university"></span>
                  </div>
                  <div class="kt-widget__info">
                    <span class="kt-widget__label">就读专业:</span>
                    <span class="kt-widget__data student-school"></span>
                  </div>
                  <div class="kt-widget__info">
                    <span class="kt-widget__label">手机号码:</span>
                    <span class="kt-widget__data student-cellphone"></span>
                  </div>
                  <div class="kt-widget__info">
                    <span class="kt-widget__label">电子邮箱:</span>
                    <span class="kt-widget__data student-email"></span>
                  </div>
                  <div class="kt-widget__info">
                    <span class="kt-widget__label">入学年份:</span>
                    <span class="kt-widget__data student-enrollment-year"></span>
                  </div>
                  <div class="kt-widget__info">
                    <span class="kt-widget__label">在线提问:</span>
                    <span class="kt-widget__data"><span class="online-question-count">999</span>次</span>
                  </div>
                  <div class="kt-widget__info">
                    <span class="kt-widget__label">在线答疑:</span>
                    <span class="kt-widget__data"><span class="online-answer-count">10</span>次</span>
                  </div>
                  <div class="kt-widget__info">
                    <span class="kt-widget__label">参与项目:</span>
                    <span class="kt-widget__data"><span class="project-count">0</span>个</span>
                  </div>
                </div>

              </div>
            </div>

            <!--end::Widget -->
          </div>
        </div>

        <!--end:: Widgets/Applications/User/Profile1-->
      </div>

      <!--End:: App Aside-->



      <!--Begin:: App Content-->
      <div class="kt-grid__item kt-grid__item--fluid kt-app__content technology-analysis-detail">

      </div>

      <!--End:: App Content-->
    </div>

    <!--End::App-->
  </div>
</div>
<input type="hidden" value="{{universityCode}}" id="hidden_university_code">
<input type="hidden" value="{{schoolID}}" id="hidden_school_id">
<input type="hidden" value="{{studentID}}" id="hidden_student_id">
<script src="/javascripts/views/abilityDetail.js" type="text/javascript"></script>