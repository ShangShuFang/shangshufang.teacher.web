<!-- begin::Body -->
<body class="kt-page--loading-enabled kt-page--loading kt-header--fixed kt-header--minimize-topbar kt-header-mobile--fixed kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-subheader--enabled kt-subheader--transparent kt-page--loading">

<!-- begin::Page loader -->

<!-- end::Page Loader -->

<!-- begin:: Page -->
<div class="kt-grid kt-grid--ver kt-grid--root kt-page">
  <div class="kt-grid kt-grid--hor kt-grid--root  kt-login kt-login--v1" id="kt_login">
    <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--desktop kt-grid--ver-desktop kt-grid--hor-tablet-and-mobile">

      <!--begin::Aside-->
      <div class="kt-grid__item kt-grid__item--order-tablet-and-mobile-2 kt-grid kt-grid--hor kt-login__aside" style="background-image: url(/media/bg/bg-4.jpg);">
        <div class="kt-grid__item">
          <a href="#" class="kt-login__logo">
            <img src="/media/logos/logo-4.png">
          </a>
        </div>
        <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--ver">
          <div class="kt-grid__item kt-grid__item--middle">
            <h3 class="kt-login__title">欢迎使用上书房智慧教育平台!</h3>
            <h4 class="kt-login__subtitle">教师端文案Slogan</h4>
          </div>
        </div>
        <div class="kt-grid__item">
          <div class="kt-login__info">
            <div class="kt-login__copyright">
              &copy 2020~2021 西安樱桃谷信息技术有限公司
            </div>
            <div class="kt-login__menu">
              <a href="#" class="kt-link">联系我们</a>
            </div>
          </div>
        </div>
      </div>

      <!--begin::Aside-->

      <!--begin::Content-->
      <div class="kt-grid__item kt-grid__item--fluid  kt-grid__item--order-tablet-and-mobile-1  kt-login__wrapper" ng-app="pageApp" ng-controller="pageCtrl">

        <div class="kt-grid__item kt-app__toggle kt-app__aside" id="kt_user_profile_aside" style="opacity: 1;">

          <!--begin:: Widgets/Applications/User/Profile1-->
          <div class="kt-portlet kt-portlet--height-fluid-">
            <div class="kt-portlet__head  kt-portlet__head--noborder">
              <div class="kt-portlet__head-label">
                <h3 class="kt-portlet__head-title">
                </h3>
              </div>
            </div>
            <div class="kt-portlet__body kt-portlet__body--fit-y">

              <!--begin::Widget -->
              <div class="kt-widget kt-widget--user-profile-1">
                <form name="userForm" novalidate>
                  <div class="kt-widget__head">
                    <div class="kt-widget__media">
                      <img src="/media/users/customer_photo_demo.png" alt="image" ng-if="model.customerPhoto == ''">
                      <img ng-src="\{{model.customerPhoto}}" alt="image" ng-if="model.customerPhoto != ''">
                    </div>
                    <div class="kt-widget__content">
                      <div class="kt-widget__section">
                        <div class="kt-widget__username">
                          <span ng-bind="model.customerNameTitle"></span>
                          <i class="flaticon2-correct kt-font-success"></i>
                        </div>
                        <span class="kt-widget__subtitle">
                            \{{model.customerUniversity}} \{{model.customerSchool}}
                        </span>
                      </div>
                      <div class="kt-widget__action">
                        <button type="button" class="btn btn-outline-hover-info btn-elevate btn-square" onclick="location.href='/'">返回首页</button>
                        <button type="button" class="btn btn-info btn-sm" ng-click="onShowUploadImageModal()">上传头像</button>&nbsp;
                        <button type="button"
                                class="btn btn-success btn-sm"
                                ng-click="onSubmit()"
                                ng-disabled="(userForm.customerName.$dirty && userForm.customerName.$invalid)
                                || (userForm.cellphone.$dirty && userForm.cellphone.$invalid)
                                || model.isCellphoneInvalid != 0
                                || model.isEmailInvalid == 1">
                          保存修改
                        </button>
                      </div>
                    </div>
                  </div>
                  <div class="kt-widget__body">
                    <div class="kt-widget__content">
                      <form class="kt-form kt-form--label-left">
                        <div class="kt-portlet__body user-info">
                          <div class="form-group row">
                            <label for="example-text-input" class="col-2 col-form-label">姓名：</label>
                            <div class="col-10">
                              <input class="form-control"
                                     ng-class="{'is-invalid': model.customerName.length === 0 || model.customerName == undefined, 'is-valid': model.customerName.length > 0}"
                                     type="text"
                                     maxlength="15"
                                     name="customerName"
                                     ng-model="model.customerName"
                                     placeholder="请输入您的姓名"
                                     required>
                              <div class="invalid-feedback" ng-if="model.customerName == '' || model.customerName == undefined">请输入您的姓名</div>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label for="example-text-input" class="col-2 col-form-label">性别：</label>
                            <div class="col-10" style="text-align: right">
                              <div class="kt-radio-inline">
                                <label class="kt-radio">
                                  <input type="radio" name="sex" value="M" ng-model="model.customerSex" ng-checked="model.customerSex == 'M'"> 男
                                  <span></span>
                                </label>
                                <label class="kt-radio">
                                  <input type="radio" name="sex" value="F" ng-model="model.customerSex" ng-checked="model.customerSex == 'F'"> 女
                                  <span></span>
                                </label>
                              </div>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label for="example-text-input" class="col-2 col-form-label">手机号码：</label>
                            <div class="col-10">
                              <input class="form-control"
                                     ng-class="{'is-invalid': model.isCellphoneInvalid == 1, 'is-valid': model.isCellphoneInvalid == 0}"
                                     type="tel"
                                     name="cellphone"
                                     ng-model="model.customerCellphone"
                                     maxlength="11"
                                     ng-blur="onCellphoneBlur()"
                                     placeholder="请输入您的手机号码"
                                     required>
                              <div class="invalid-feedback" ng-if="model.isCellphoneInvalid == 1" ng-bind="model.checkCellphoneAlterMessage"></div>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label for="example-text-input" class="col-2 col-form-label">电子邮箱：</label>
                            <div class="col-10">
                              <input class="form-control"
                                     ng-class="{'is-invalid': model.isEmailInvalid == 1, 'is-valid': model.isEmailInvalid == 0}"
                                     type="email"
                                     ng-model="model.customerEmail"
                                     ng-blur="onEmailBlur()"
                                     placeholder="请输入您的电子邮箱地址">
                              <div class="invalid-feedback" ng-if="model.isEmailInvalid == 1" ng-bind="model.checkEmailAlterMessage"></div>
                            </div>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </form>
              </div>

              <!--end::Widget -->
            </div>
          </div>

          <!--end:: Widgets/Applications/User/Profile1-->
        </div>

        <!--begin::Body-->


        <!--end::Body-->
      </div>

      <!--end::Content-->
    </div>
  </div>
</div>

<div class="modal fade" id="kt_modal_image" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form class="kt-form kt-form--label-right" name="brandForm" novalidate>
        <div class="modal-header">
          <h5 class="modal-title">上传1:1尺寸的头像</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          </button>
        </div>
        <div class="modal-body">
          <div class="kt-portlet__body">
            <div id="file-upload-image" class="fileUploadContent"></div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- end:: Page -->

